@inject IViewLocalizer Localizer

@model MfaLoginViewModel

<div class="login-page">
    <div class="lead">
        <h1>@Localizer["Login"]</h1>
        <p>@Localizer["Multi factor authentication"]</p>
    </div>
    <partial name="_ValidationSummary" />
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>@Localizer["SMS"]</h2>
                </div>
                <div class="card-body">
                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group">
                            <label asp-for="OtpCode">@Localizer["OTP Code"]</label>
                            <input class="form-control" placeholder="@Localizer["OTP Code"]" asp-for="OtpCode" autofocus />
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="RememberDevice" />
                                <label class="form-check-label" asp-for="RememberDevice">@Localizer["Remember this device"]</label>
                            </div>
                        </div>
                        <button class="btn btn-primary" name="button" value="login">@Localizer["Login"]</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>